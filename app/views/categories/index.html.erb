<h2 class="mb-4 text-info">Most Recent Posts</h2>
<div class="row">
    <% @recent_posts.each do |recent| %>
      <div class="col-6 col-sm-6 col-md-3 col-lg-3 mb-4">       
         <% if recent.image? %>
           <%= image_tag recent.image.url, class:"img-fluid" %>
          <% end %> 
        <div class="title lead"><%= recent.title %></div>
        <div class="description"><%= recent.description %></div>
        
      </div><!-- end of col-md-3 -->
    <% end %>
</div>

<div class="border mt-2" style="margin-bottom: 30px;">
  <%= image_tag("index_border.jpg",style:"width: 100%; height:100px;") %>
</div>


<h4 class="my-4">Categories of OTC in Japan</h4>
   <% if user_signed_in? %>
      <% if current_user.admin? %>
        <%= link_to "Add New Post", new_post_path,class:"btn btn-info mb-4 mr-2" %>
        <%= link_to "Add New Category", new_category_path,class:"btn btn-danger mb-4" %>
      <% end %>
   <% end %>
   

<div class="center">
  <div class="row row-eq-height">
  	<% @categories.each do |category| %>
  	  <div class="col-sm-6 col-md-6 col-lg-3">
       <div class="card mb-3">
       	 <% if category.image? %>
           <%= image_tag category.image.url, class:"card-img-top" %>
          <% end %> 
			  <div class="card-body">
			    <p class="card-text">
			    	<h4 class="category-top"><%= category.name %></h4>
			    	<%= category.blurb %>
			    </p>
			    <div class="d-flex justify-content-between">   
             <div class="view-margin"><%= link_to "View More", category_path(category),class:"btn btn-outline-success" %>
             </div>
						 <p class="text-muted"><%= category.posts.size %> items</p>
          </div>
			  </div>
			</div>
    </div><!-- end of col-3 -->
	<% end %>
  </div>
</div>



