<h4 class="my-4">Categories of OTC in Japan</h4>
   <% if user_signed_in? %>
      <% if current_user.admin? %>
        <%= link_to "Add Category", new_category_path,class:"btn btn-danger mb-2" %>
      <% end %>
   <% end %>
   

<div class="center">
  <div class="row row-eq-height">
  	<% @categories.each do |category| %>
  	  <div class="col-sm-6 col-md-6 col-lg-3">
       <div class="card mb-3">
       	 <% if category.image? %>
           <%= image_tag category.image.url, class:"card-img-top" %>
          <% end %> 
			  <div class="card-body">
			    <p class="card-text">
			    	<h4 class="category-top"><%= category.name %></h4>
			    	<%= category.blurb %>
			    </p>
			    <div class="d-flex justify-content-between">   
             <div class="view-margin"><%= link_to "View #{category.name}", category_path(category),class:"btn btn-outline-success" %>
             </div>
						 <p class="text-muted"><%= category.posts.size %> items</p>
          </div>
			  </div>
			</div>
    </div><!-- end of col-3 -->
	<% end %>
  </div>
</div>



