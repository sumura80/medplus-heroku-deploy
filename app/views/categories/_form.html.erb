<%= form_for(@category, html: {multipart: true}) do |form| %>

  <div class="row mt-4">
    <div class="col-md-12">
      <% if @category.present? && @category.errors.any? %>
        <div id="error_explanation" class="alert alert-danger alert-dismissible">
         <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h5><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h5>
          <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      <div class="form-group">
        <!-- 既存レコード(DBに保存されている)かつ、画像が存在する場合 -->
        <% if @category.image? %>
         <%= image_tag @category.image.url,class:"category-pic-size img-fluid" %>
        <% end %><br>
          <%= form.label :image %>
          <%= form.file_field :image,class: "form-control" %>
      </div>

       <div class="form-group">
        <%= form.label :"Category name" %>
        <%= form.text_field :name,class: "form-control" %>
      </div>

      <div class="form-group lead">
        <%= form.label :blurb %>
        <%= form.text_area :blurb,rows: "3",class: "form-control" %>
      </div>

      <div class="form-group" style="font-size:1.8em;">
        <%= form.label :precaution_large %>
        <%= form.text_area :precaution_large,rows: "3",class: "form-control" %>
      </div>
      <div class="form-group text-danger lead">
        <%= form.label :precaution_red %>
        <%= form.text_area :precaution_red,rows: "3",class: "form-control" %>
      </div>

      <div class="form-group lead">
        <%= form.label :precaution_bold %>
        <%= form.text_area :precaution_bold,rows: "3",class: "form-control" %>
      </div>

    </div><!-- end of col-md-12 -->
  </div><!-- end of row -->

   

  <div class="actions">
    <%= form.submit "Post ", class:"btn btn-warning"%>
  </div>
<% end %>
<br>
<p><%= link_to "Back", @category, class:"btn btn-secondary" %></p>


