<%= form_for(@post, html: {multipart: true}) do |form| %>

 <% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible">
     <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
